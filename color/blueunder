#!/bin/sh

# <html><h2>blueunder</h2>
# <h3>Examples</h3>
# <dl>
# <dt>Show arguments with space in BlueUnder:</dt>
# <dd>
# <pre><code class="language-bash">blueunder Show Text
# </code></pre>
# </dd>
# </dl>
# </html>
[ $# -eq 0 ] || printf -- '%b' "\033[4;34m"; printf '%b' "$*"; printf -- '%b' "\033[0m"
